---
import Base from "../layouts/Base.astro";
---

<Base title="Habilidades · Portafolio">
  <!-- BREADCRUMB -->
  <nav class="bg-light border-bottom mt-5 pt-4" aria-label="breadcrumb">
    <ol class="breadcrumb container my-2">
      <li class="breadcrumb-item"><a href="/">Inicio</a></li>
      <li class="breadcrumb-item active" aria-current="page">Habilidades</li>
    </ol>
  </nav>

  <!-- CONTENIDO -->
  <main class="container py-5">
    <h1 class="mb-4">Habilidades</h1>

    <div class="row g-4">
      <!-- Columna badges -->
      <div class="col-md-6">
        <h5 class="mb-3"><i class="bi bi-tools me-1"></i> Tecnologías & Lenguajes</h5>

        <div class="mb-2">
          <span class="badge rounded-pill text-bg-primary me-1 mb-1">Transact-SQL</span>
          <span class="badge rounded-pill text-bg-primary me-1 mb-1">SQL Server</span>
          <span class="badge rounded-pill text-bg-primary me-1 mb-1">MySQL</span>
        </div>

        <div class="mb-2">
          <span class="badge rounded-pill text-bg-dark me-1 mb-1">Java</span>
          <span class="badge rounded-pill text-bg-dark me-1 mb-1">C#</span>
          <span class="badge rounded-pill text-bg-dark me-1 mb-1">PHP</span>
          <span class="badge rounded-pill text-bg-dark me-1 mb-1">Python</span>
          <span class="badge rounded-pill text-bg-dark me-1 mb-1">JavaScript</span>
        </div>

        <div class="mb-2">
          <span class="badge rounded-pill text-bg-info me-1 mb-1">HTML5</span>
          <span class="badge rounded-pill text-bg-info me-1 mb-1">CSS3</span>
          <span class="badge rounded-pill text-bg-info me-1 mb-1">Bootstrap</span>
          <span class="badge rounded-pill text-bg-info me-1 mb-1">Tailwind</span>
          <span class="badge rounded-pill text-bg-info me-1 mb-1">React</span>
        </div>

        <div>
          <span class="badge rounded-pill text-bg-success me-1 mb-1">Node.js</span>
          <span class="badge rounded-pill text-bg-success me-1 mb-1">Spring Boot</span>
          <span class="badge rounded-pill text-bg-warning text-dark me-1 mb-1">Flutter</span>
          <span class="badge rounded-pill text-bg-warning text-dark me-1 mb-1">Kotlin</span>
          <span class="badge rounded-pill text-bg-warning text-dark me-1 mb-1">Android</span>
        </div>
      </div>

      <!-- Columna progress -->
      <div class="col-md-6">
        <h5 class="mb-3"><i class="bi bi-graph-up-arrow me-1"></i> Niveles (autoevaluación)</h5>

        <label class="form-label">SQL</label>
        <div class="progress mb-3" role="progressbar" aria-label="Nivel SQL" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar bg-primary bg-gradient rounded-pill" style="width: 90%">90%</div>
        </div>

        <label class="form-label">Power BI / Reportes</label>
        <div class="progress mb-3" role="progressbar" aria-label="Nivel Power BI" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar bg-success bg-gradient rounded-pill" style="width: 90%">90%</div>
        </div>

        <label class="form-label">JavaScript</label>
        <div class="progress mb-3" role="progressbar" aria-label="Nivel JavaScript" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar bg-info bg-gradient rounded-pill" style="width: 75%">75%</div>
        </div>

        <label class="form-label">React / Bootstrap</label>
        <div class="progress mb-3" role="progressbar" aria-label="Nivel React y Bootstrap" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar bg-warning text-dark bg-gradient rounded-pill" style="width: 75%">75%</div>
        </div>

        <label class="form-label">Spring Boot / Node.js</label>
        <div class="progress mb-1" role="progressbar" aria-label="Nivel Spring Boot y Node" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar bg-secondary bg-gradient rounded-pill" style="width: 70%">70%</div>
        </div>
      </div>
    </div>
  </main>
</Base>
