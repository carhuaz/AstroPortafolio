---
import Base from "../layouts/Base.astro";
---

<Base title="Juan Carhuaz • Portafolio">
  <!-- Pantalla de bienvenida -->
  <div id="intro">
    <h1 class="intro-text">Portafolio<br><span>Juan Carhuaz</span></h1>
  </div>

  <!-- NAVBAR -->
  <nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Mi Portafolio</a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasDarkNavbar"
        aria-controls="offcanvasDarkNavbar"
        aria-label="Abrir menú de navegación"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div
        class="offcanvas offcanvas-end text-bg-dark"
        tabindex="-1"
        id="offcanvasDarkNavbar"
        aria-labelledby="offcanvasDarkNavbarLabel"
      >
        <div class="offcanvas-header">
          <h5 class="offcanvas-title mb-0" id="offcanvasDarkNavbarLabel">Menú</h5>
          <button
            type="button"
            class="btn-close btn-close-white"
            data-bs-dismiss="offcanvas"
            aria-label="Cerrar"
          ></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">
                <i class="bi bi-house me-1"></i>Inicio</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sobremi">
                <i class="bi bi-person me-1"></i>Sobre mí</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/experiencia/Profesional">
                <i class="bi bi-briefcase me-1"></i>Experiencia Académica y Proyectos</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/proyectos">
                <i class="bi bi-grid-3x3-gap me-1"></i>Más Proyectos</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/habilidades">
                <i class="bi bi-lightning-charge me-1"></i>Habilidades</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contacto">
                <i class="bi bi-envelope me-1"></i>Contacto</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- HERO -->
  <header
    class="hero-space text-center d-flex flex-column justify-content-center"
  >
    <div class="container">
      <img
        src="/img/perfil.jpg"
        alt="Foto de perfil de Juan Carhuaz"
        class="rounded-circle mb-3 shadow"
        width="160"
        height="160"
      />
      <h1 class="display-5 fw-bold">¡Hola! Soy Juan Carhuaz</h1>
      <p class="lead">
        Desarrollador web: HTML, CSS, JavaScript y Bootstrap. Creo experiencias
        modernas, responsivas y accesibles.
      </p>
      <a class="btn btn-primary btn-lg me-2" href="/proyectos">Ver proyectos</a>
      <a class="btn btn-outline-light btn-lg" href="/contacto">Contáctame</a>
    </div>
  </header>

  <!-- CARRUSEL -->
  <section class="py-4" aria-label="Proyectos destacados">
    <div class="container">
      <div
        id="carouselExampleInterval"
        class="carousel slide shadow-sm rounded overflow-hidden"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="10000">
            <img
              src="/img/slide1.png"
              class="d-block w-100 object-fit-cover carousel-h"
              alt="Landing de pastelería en mockup"
            />
            <div
              class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2"
            >
              <h5>Página web de manicurista</h5>
              <p>Diseño responsive.</p>
            </div>
          </div>

          <div class="carousel-item" data-bs-interval="2000">
            <img
              src="/img/slide2.png"
              class="d-block w-100 object-fit-cover carousel-h"
              alt="Desarrollo en Unity"
              loading="lazy"
            />
            <div
              class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2"
            >
              <h5>Desarrollo en Unity</h5>
              <p>Unity.</p>
            </div>
          </div>

          <div class="carousel-item">
            <img
              src="/img/Slide3.png"
              class="d-block w-100 object-fit-cover carousel-h"
              alt="App móvil"
              loading="lazy"
            />
            <div
              class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2"
            >
              <h5>App móvil</h5>
              <p>Arquitectura móvil.</p>
            </div>
          </div>
        </div>

        <!-- Controles -->
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Anterior</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Siguiente</span>
        </button>

        <!-- Indicadores -->
        <div class="carousel-indicators">
          <button
            type="button"
            data-bs-target="#carouselExampleInterval"
            data-bs-slide-to="0"
            class="active"
            aria-current="true"
            aria-label="Diapositiva 1"
          ></button>
          <button
            type="button"
            data-bs-target="#carouselExampleInterval"
            data-bs-slide-to="1"
            aria-label="Diapositiva 2"
          ></button>
          <button
            type="button"
            data-bs-target="#carouselExampleInterval"
            data-bs-slide-to="2"
            aria-label="Diapositiva 3"
          ></button>
        </div>
      </div>
    </div>
  </section>

  <!-- CARDS -->
  <main class="container py-5">
    <div class="card text-bg-dark mb-3">
      <div class="card-body text-center">
        <h5 class="card-title">Sobre mí</h5>
        <p class="card-text">Conóceme un poco más.</p>
        <a href="/sobremi" class="btn btn-outline-primary btn-sm">Ir</a>
      </div>
    </div>

    <div class="card text-bg-light mb-3">
      <div class="card-body text-center">
        <h5 class="card-title">Proyectos</h5>
        <p class="card-text">Mira lo que he creado.</p>
        <a href="/proyectos" class="btn btn-outline-primary btn-sm">Ir</a>
      </div>
    </div>

    <div class="card text-bg-info mb-3">
      <div class="card-body text-center">
        <h5 class="card-title">Habilidades</h5>
        <p class="card-text">Tecnologías que manejo.</p>
        <a href="/habilidades" class="btn btn-outline-primary btn-sm">Ir</a>
      </div>
    </div>

    <div class="card text-bg-danger mb-3">
      <div class="card-body text-center">
        <h5 class="card-title">Contacto</h5>
        <p class="card-text">Ponte en comunicación.</p>
        <a href="/contacto" class="btn btn-outline-primary btn-sm">Ir</a>
      </div>
    </div>
  </main>
</Base>
