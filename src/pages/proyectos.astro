---
import Base from "../layouts/Base.astro";
---

<Base title="Proyectos · Portafolio">
  <!-- BREADCRUMB -->
  <nav class="bg-light border-bottom" aria-label="breadcrumb">
    <ol class="breadcrumb container my-2">
      <li class="breadcrumb-item"><a href="/">Inicio</a></li>
      <li class="breadcrumb-item active" aria-current="page">Proyectos</li>
    </ol>
  </nav>

  <!-- CONTENIDO -->
  <main class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
      <h1 class="mb-0">Proyectos</h1>
      <!-- pestañas -->
      <ul class="nav nav-pills" id="projTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all"
            type="button" role="tab" aria-controls="all" aria-selected="true">Todos</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="data-tab" data-bs-toggle="tab" data-bs-target="#data"
            type="button" role="tab" aria-controls="data" aria-selected="false">Data & BI</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="mobile-tab" data-bs-toggle="tab" data-bs-target="#mobile"
            type="button" role="tab" aria-controls="mobile" aria-selected="false">Móvil</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="analytics-tab" data-bs-toggle="tab" data-bs-target="#analytics"
            type="button" role="tab" aria-controls="analytics" aria-selected="false">Analítica</button>
        </li>
      </ul>
    </div>

    <div class="tab-content">
      <!-- TAB: TODOS -->
      <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab" tabindex="0">
        <div class="row g-4">
          <!-- Card 1 -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img src="src/img/proyecto1.png" class="card-img-top object-fit-cover" alt="Dashboard Financiero" />
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                  <h5 class="card-title mb-1">Dashboard Financiero</h5>
                  <span class="badge text-bg-primary">Data & BI</span>
                </div>
                <p class="card-text mb-3">KPIs de ingresos, gastos y morosidad (Power BI / SQL).</p>
                <a href="#" class="btn btn-primary btn-sm"><i class="bi bi-box-arrow-up-right me-1"></i>Demo</a>
                <a href="#" class="btn btn-outline-secondary btn-sm"><i class="bi bi-code-slash me-1"></i>Código</a>
              </div>
            </div>
          </div>

          <!-- Card 2 -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img src="src/img/Slide3.png" class="card-img-top object-fit-cover" alt="App móvil para asesores" loading="lazy" />
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                  <h5 class="card-title mb-1">App móvil (asesores)</h5>
                  <span class="badge text-bg-success">Móvil</span>
                </div>
                <p class="card-text mb-3">Liderazgo de primera etapa: planificación → implementación.</p>
                <a href="#" class="btn btn-primary btn-sm"><i class="bi bi-box-arrow-up-right me-1"></i>Demo</a>
                <a href="#" class="btn btn-outline-secondary btn-sm"><i class="bi bi-code-slash me-1"></i>Código</a>
              </div>
            </div>
          </div>

          <!-- Card 3 -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img src="src/img/proyecto3.avif" class="card-img-top object-fit-cover" alt="Segmentación de clientes" loading="lazy" />
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                  <h5 class="card-title mb-1">Segmentación de clientes</h5>
                  <span class="badge text-bg-warning text-dark">Analítica</span>
                </div>
                <p class="card-text mb-3">Optimización de productos y campañas crediticias.</p>
                <a href="#" class="btn btn-primary btn-sm"><i class="bi bi-box-arrow-up-right me-1"></i>Demo</a>
                <a href="#" class="btn btn-outline-secondary btn-sm"><i class="bi bi-code-slash me-1"></i>Código</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- TAB: DATA & BI -->
      <div class="tab-pane fade" id="data" role="tabpanel" aria-labelledby="data-tab" tabindex="0">
        <div class="row g-4">
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img src="src/img/proyecto1.png" class="card-img-top object-fit-cover" alt="Dashboard Financiero" />
              </div>
              <div class="card-body">
                <h5 class="card-title mb-1">Dashboard Financiero</h5>
                <span class="badge text-bg-primary mb-2">Data & BI</span>
                <p class="card-text mb-3">KPIs de ingresos, gastos y morosidad (Power BI / SQL).</p>
                <a href="#" class="btn btn-primary btn-sm">Demo</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Código</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- TAB: MÓVIL -->
      <div class="tab-pane fade" id="mobile" role="tabpanel" aria-labelledby="mobile-tab" tabindex="0">
        <div class="row g-4">
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img src="src/img/Slide3.png" class="card-img-top object-fit-cover" alt="App móvil para asesores" loading="lazy" />
              </div>
              <div class="card-body">
                <h5 class="card-title mb-1">App móvil (asesores)</h5>
                <span class="badge text-bg-success mb-2">Móvil</span>
                <p class="card-text mb-3">Liderazgo de primera etapa: planificación → implementación.</p>
                <a href="#" class="btn btn-primary btn-sm">Demo</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Código</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- TAB: ANALÍTICA -->
      <div class="tab-pane fade" id="analytics" role="tabpanel" aria-labelledby="analytics-tab" tabindex="0">
        <div class="row g-4">
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img src="src/img/proyecto3.avif" class="card-img-top object-fit-cover" alt="Segmentación de clientes" loading="lazy" />
              </div>
              <div class="card-body">
                <h5 class="card-title mb-1">Segmentación de clientes</h5>
                <span class="badge text-bg-warning text-dark mb-2">Analítica</span>
                <p class="card-text mb-3">Optimización de productos y campañas crediticias.</p>
                <a href="#" class="btn btn-primary btn-sm">Demo</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Código</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Base>
